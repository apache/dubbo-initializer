# Nacos Service Discovery and Registration Configuration
# The sub-property server-addr specifies the Nacos server host and port
spring:
  cloud:
    nacos:
      discovery:
        server-addr: mse-6d50f4f0-p.nacos-ans.mse.aliyuncs.com:8848

  # DataSource Configuration
  datasource:
    name: "storageDataSource"
    type: com.alibaba.druid.pool.DruidDataSource
    driver-class-name: com.mysql.jdbc.Driver
    url: jdbc:mysql://xxx:3306/fescar?useSSL=false&serverTimezone=UTC
    username: xxx
    password: xxx
    druid:
      max-active: 20
      min-idle: 2
      initial-size: 2

# Seata Configuration
seata:
  enabled: true
  service:
    vgroup-mapping: default
    grouplist: 127.0.0.1:8091
    disable-global-transaction: false
  
